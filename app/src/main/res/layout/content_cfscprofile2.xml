<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/navtextcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.meseret.niqugebere.profile.cfsc.CFSCProfile"
    tools:showIn="@layout/app_bar_cfscprofile2">

    <LinearLayout
        android:id="@+id/profile_uploads_cover_layout"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@android:color/holo_orange_light"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/upload_cover_text_info"
            android:text="@string/upload_profile_image"
            android:textColor="@color/navtextcolor"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
       <LinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <Button
               android:id="@+id/upload_cover_btn"
               android:text="@string/upload_photo"
               android:textColor="@color/navtextcolor"
               android:background="@drawable/button_normal"
               android:minHeight="20dp"
               android:minWidth="20dp"
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               android:paddingBottom="10dp"
               android:paddingTop="10dp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginRight="20dp"
               />

       </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/navback"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/profile_uploads_cover_layout"
        android:id="@+id/placeholder"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/navtextcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.meseret.niqugebere.profile.cfsc.CFSCProfile"
        tools:showIn="@layout/app_bar_cfscprofile2">

    </FrameLayout>
    <ProgressBar
        android:id="@+id/profile_center_pr"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>