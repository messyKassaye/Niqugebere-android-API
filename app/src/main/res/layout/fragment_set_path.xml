<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meseret.niqugebere.profile.transporter.transporterFragments.SetPathFragment">

    <TextView
        android:id="@+id/path_info"
        android:gravity="center"
        android:textColor="@color/bg"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/path_info" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/path_recycleriew"
        android:layout_below="@id/path_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
