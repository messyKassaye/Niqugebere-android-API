<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/posted_products_cardview"
    android:layout_width="190dp"
    android:layout_height="360dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="@dimen/card_album_radius"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/posted_product_photo"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="@dimen/album_cover_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitXY" />
          <LinearLayout
              android:orientation="vertical"
              android:padding="2dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/posted_product_sub_category"
                  android:padding="2dp"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/posted_product_name"
                  android:padding="5dp"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:padding="5dp"
                  android:id="@+id/posted_measurement_unit_and_quantity"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:padding="5dp"
                  android:id="@+id/posted_product_unit_price"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <Button
                  android:id="@+id/post_order"
                  android:textColor="@color/navtextcolor"
                  android:textAllCaps="false"
                  android:background="@drawable/button_normal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
          </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
