<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/requester_company_photo"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:scaleType="fitXY" />
    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_toRightOf="@id/requester_company_photo"
        android:layout_marginRight="10dp"
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/requester_company_name"
            android:textColor="@color/navtextcolor"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello" />

        <TextView
            android:id="@+id/requested_quantity"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/delivery_type"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>