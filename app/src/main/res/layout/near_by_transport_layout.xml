<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/top_mall_card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="@dimen/card_album_radius"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/car_photo"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitXY" />
         <RelativeLayout
             android:layout_toRightOf="@id/car_photo"
             android:padding="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:id="@+id/top_layout"
                 android:layout_alignParentTop="true"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/driver_name"
                     android:textSize="18sp"
                     android:textColor="@color/navtextcolor"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:id="@+id/car_type"
                     android:textSize="18sp"
                     android:textColor="@color/navtextcolor"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:id="@+id/car_weight"
                     android:textSize="18sp"
                     android:textColor="@color/navtextcolor"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </LinearLayout>

             <Button
                 android:id="@+id/choosed"
                 android:layout_alignParentBottom="true"
                 android:text="@string/choosed"
                 android:textColor="@color/navtextcolor"
                 android:background="@drawable/button_normal"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginBottom="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
         </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
