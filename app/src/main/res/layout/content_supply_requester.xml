<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.meseret.niqugebere.profile.cfsc.ShowSupplyRequesterActivity"
    tools:showIn="@layout/activity_supply_requesterr">
    <LinearLayout
        android:id="@+id/supply_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/requested_product_photo"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="@dimen/album_cover_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/requested_product_name"
            android:padding="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/navtextcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/hint_color" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/supply_requester_recyclerview"
        android:layout_below="@id/supply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
