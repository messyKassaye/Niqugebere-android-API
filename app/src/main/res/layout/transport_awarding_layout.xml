<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/supply_top_layout"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/awarding_company_photo"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/awarding_company_name"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/center_content_layout"
        android:layout_below="@id/supply_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/plate_no"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/capacity"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/award_btn"
        android:layout_below="@id/center_content_layout"
        android:text="@string/award"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_normal"
        android:textColor="@color/navtextcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@id/award_btn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/hint_color" />
</RelativeLayout>