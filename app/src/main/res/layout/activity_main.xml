<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.meseret.niqugebere.MainActivity">
    <include layout="@layout/home_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/toolbar"/>

    <FrameLayout
        android:id="@+id/content"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemTextColor="@color/bottom_navigation_color"
        android:background="@color/navback"
        app:itemIconTint="@color/bottom_navigation_color"
        app:menu="@menu/navigation" />

</LinearLayout>
