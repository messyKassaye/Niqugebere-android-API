<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/navtextcolor"
                android:text="@string/tell_us_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:textColorHint="@color/hint_color"
                android:paddingTop="5dp"
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/company_name"
                    android:textColor="@color/navtextcolor"
                    android:textColorHint="@color/hint_color"
                    android:textCursorDrawable="@null"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:hint="@string/company_name"
                    android:background="@drawable/text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/woreda_spinner"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_spinner_background"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dropdown" />


            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:textColorHint="@color/hint_color"
                android:paddingTop="5dp"
                android:id="@+id/input_layout_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/spacial_name"
                    android:hint="@string/special_name"
                    android:textCursorDrawable="@null"
                    android:layout_width="match_parent"
                    android:background="@drawable/text_field"
                    android:textColor="@color/navtextcolor"
                    android:textColorHint="@color/hint_color"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/second_signup_error"
                android:layout_margin="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/next2"
                android:layout_marginTop="20dp"
                android:text="@string/next2"
                android:textColor="@color/navtextcolor"
                android:background="@drawable/button_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>