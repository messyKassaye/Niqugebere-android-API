<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:id="@+id/registration_success_title"
       android:textSize="18sp"
       android:textColor="@color/navback"
       android:gravity="center"
       android:layout_margin="5dp"
       android:text="@string/registration_is_completed"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/conformation_message"
        android:text="@string/conformation_message"
        android:textColor="@color/navtextcolor"
        android:textSize="16sp"
        android:gravity="left"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>